<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- Config -->
    <route url="/V1/depend-co-configuration" method="GET">
        <service class="Bss\DependentCOFixBug\Api\DependentOptionManagementInterface" method="getConfig"/>
        <resources>
            <resource ref="Bss_DependentCustomOption::depend_co"/>
        </resources>
    </route>
    <!-- Depend CO APIs -->
    <route url="/V1/depend-co/optionId/:optionId" method="GET">
        <service class="Bss\DependentCOFixBug\Api\DependentOptionRepositoryInterface" method="getByOptionId"/>
        <resources>
            <resource ref="Bss_DependentCustomOption::depend_co"/>
        </resources>
    </route>
    <route url="/V1/depend-co/:sku/options" method="GET">
        <service class="Bss\DependentCOFixBug\Api\DependentOptionRepositoryInterface" method="getListBySku"/>
        <resources>
            <resource ref="Bss_DependentCustomOption::depend_co"/>
        </resources>
    </route>
    <route url="/V1/depend-co/products/options" method="POST">
        <service class="Bss\DependentCOFixBug\Api\DependentOptionRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Bss_DependentCustomOption::depend_co"/>
        </resources>
    </route>
    <route url="/V1/depend-co/products/options/:optionId" method="PUT">
        <service class="Bss\DependentCOFixBug\Api\DependentOptionRepositoryInterface" method="saveById"/>
        <resources>
            <resource ref="Bss_DependentCustomOption::depend_co"/>
        </resources>
    </route>
</routes>
