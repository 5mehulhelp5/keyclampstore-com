<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Zend\ServiceManager\ServiceLocatorInterface" type="Zend\ServiceManager\ServiceManager"/>
    <preference for="Mageplaza\Security\Block\Adminhtml\Checklist" type="Mageplaza\SecurityPro\Block\Adminhtml\Checklist"/>

    <type name="\Magento\Backend\App\AbstractAction">
        <plugin name="mp_security_action" type="Mageplaza\SecurityPro\Plugin\Action"/>
    </type>
    <type name="\Magento\Backend\Controller\Adminhtml\Auth\Login">
        <plugin name="mp_securitypro_login" type="Mageplaza\SecurityPro\Plugin\Login"/>
    </type>
    <type name="\Magento\Framework\Data\Form\Element\Label">
        <plugin name="mp_decode_description" type="Mageplaza\SecurityPro\Plugin\Description"/>
    </type>
    <type name="Magento\Ui\Model\Export\MetadataProvider">
        <arguments>
            <argument name="data" xsi:type="array">
                <item name="mageplaza_security_actionlog_listing" xsi:type="array">
                    <item name="created_at" xsi:type="string">time</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Ui\Model\Export\MetadataProvider">
        <plugin name="mp_securitypro_export_csv" type="Mageplaza\SecurityPro\Plugin\Adminhtml\ExportCsv"/>
    </type>
</config>
